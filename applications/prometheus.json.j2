{
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "BRIDGE",
      "image": "prom/prometheus:latest",
      "portMappings": [{"containerPort": 9090, "hostPort": 0, "protocol": "tcp"}]
    },
    "volumes": [{
      "containerPath": "/etc/prometheus/prometheus.yml",
      "hostPath": "/etc/prometheus/prometheus.yml",
      "mode": "RO"
    }]
  },
  "id": "prometheus",
  "instances": 1,
  "cpus": 0.3,
  "mem": 128,
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/",
      "portIndex": 0,
      "gracePeriodSeconds": 30,
      "intervalSeconds": 30,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 2,
      "ignoreHttp1xx": false
    }
  ],
  "upgradeStrategy": {
    "minimumHealthCapacity": 0.5,
    "maximumOverCapacity": 0.0
  }
}